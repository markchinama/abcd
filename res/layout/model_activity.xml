<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/ecomodelbutton"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/eco_model_btn" />

    <ImageButton
        android:id="@+id/normalmodelbutton"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/normal_model_btn" />

    <ImageButton
        android:id="@+id/powermodelbutton"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/power_model_btn" />

    <ImageButton
        android:id="@+id/snowmodelbutton"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/snow_model_btn" />

</LinearLayout>