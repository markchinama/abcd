<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/homebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_home" />

        <ImageButton
            android:id="@+id/infobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_bus_info_pressed" />

        <ImageButton
            android:id="@+id/controlbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_bus_control_pressed" />

        <ImageButton
            android:id="@+id/cameralbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_bus_cameral_pressed" />

        <ImageButton
            android:id="@+id/expertbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_bus_expert_pressed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="600dp"
        android:background="@drawable/infobg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/model_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/eco" >
            </ImageButton>

            <ProgressBar
                android:id="@+id/score_processbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="350dp"
                android:layout_height="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"
                android:max="100"
                android:progress="78"
                android:progressDrawable="@drawable/score" >
            </ProgressBar>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bus" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:layout_marginTop="60dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/status_power_panel_battery"
                android:layout_width="70dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/battery" />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="40dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/status_battery_panel_number"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="30px" />

                <ProgressBar
                    android:id="@+id/power_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="78" >
                </ProgressBar>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/soc" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/line" />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="40dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/status_energy_panel_number"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="30px" />

                <ProgressBar
                    android:id="@+id/energy_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="78" >
                </ProgressBar>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/energy" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/line" />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="40dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/status_distance_panel_number"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="30px" />

                <ProgressBar
                    android:id="@+id/mile_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="78" >
                </ProgressBar>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/mileage" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/line" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="40dp"
                android:orientation="vertical" >

                <com.mark.bus.app.MyView
                    android:id="@+id/myView"
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="40dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/energyconsumption" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="331px"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/air_bg"
        android:layout_width="fill_parent"
        android:layout_height="133px"
        android:background="@drawable/airbg"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/item_list_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:background="@drawable/home" />

        <ImageButton
            android:id="@+id/ac_shut_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:background="@drawable/air_off" />

        <LinearLayout
            android:layout_width="90px"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20px"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ac_uparrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3px"
                android:background="@drawable/uparrow"
                android:gravity="center" />

            <TextView
                android:id="@+id/ac_text"
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3px"
                android:background="@drawable/numberbg"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="10px" />

            <ImageButton
                android:id="@+id/ac_downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3px"
                android:background="@drawable/downarrow"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_list_temprature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55px"
            android:text="@string/kongtiao"
            android:textSize="20dp" />

        <!-- 横杆 温度调节 -->

        <LinearLayout
            android:layout_width="160px"
            android:layout_height="fill_parent"
            android:layout_marginLeft="110px"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ac_model"
                android:layout_width="fill_parent"
                android:layout_height="50px"
                android:background="@drawable/ac_model" >
            </ImageButton>

            <SeekBar
                android:id="@+id/item_list_temprature_seekbar"
                android:layout_width="135px"
                android:layout_height="30px"
                android:layout_marginLeft="10px"
                android:layout_marginTop="40px"
                android:max="100"
                android:maxHeight="10px"
                android:progress="3"
                android:progressDrawable="@drawable/fun_score"
                android:thumb="@drawable/fun_seekbar_thumb" />
            <!-- 横杆 温度调节 完 -->


            <!-- 功率 -->
        </LinearLayout>

        <TextView
            android:id="@+id/item_list_power_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="55px"
            android:text="@string/gonglv"
            android:textSize="20dp" />

        <!-- 功率 完 -->

        <LinearLayout
            android:layout_width="100px"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/power_uparrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3px"
                android:background="@drawable/uparrow"
                android:gravity="center" />

            <TextView
                android:id="@+id/power_text"
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3px"
                android:background="@drawable/numberbg"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="10px" />

            <ImageButton
                android:id="@+id/power_downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3px"
                android:background="@drawable/downarrow"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>