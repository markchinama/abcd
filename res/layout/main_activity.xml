<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="128px"
        android:background="@drawable/button_background"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/homebutton"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_home" />

        <ImageButton
            android:id="@+id/infobutton"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_bus_info" />

        <ImageButton
            android:id="@+id/controlbutton"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_bus_control" />

        <ImageButton
            android:id="@+id/cameralbutton"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_bus_cameral" />

        <ImageButton
            android:id="@+id/expertbutton"
            android:layout_width="184dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_bus_expert" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="312px"
        android:background="@drawable/bus"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/model_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/eco" >
        </ImageButton>

        <ProgressBar
            android:id="@+id/score_processbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:max="100"
            android:progress="78"
            android:progressDrawable="@drawable/score" >
        </ProgressBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:background="@drawable/infobg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/status_power_panel_battery"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/battery" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/status_battery_panel_number"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="78%"
                android:textColor="#000000"
                android:textSize="30px" />

            <ProgressBar
                android:id="@+id/power_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:max="100"
                android:progress="78" >
            </ProgressBar>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/soc" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/line" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/status_energy_panel_number"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="234KW"
                android:textColor="#000000"
                android:textSize="30px" />

            <ProgressBar
                android:id="@+id/energy_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:max="100"
                android:progress="78" >
            </ProgressBar>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/energy" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/line" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/status_distance_panel_number"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="234KW"
                android:textColor="#000000"
                android:textSize="30px" />

            <ProgressBar
                android:id="@+id/mile_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:max="100"
                android:progress="78" >
            </ProgressBar>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/mileage" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/line" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <com.mark.bus.app.MyView
                android:id="@+id/myView"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/energyconsumption" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="331px"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/air_bg"
        android:layout_width="fill_parent"
        android:layout_height="133px"
        android:background="@drawable/airbg"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/item_list_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="40px"
            android:background="@drawable/home" />

        <ImageButton
            android:id="@+id/ac_shut_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65px"
            android:layout_marginTop="40px"
            android:background="@drawable/air_off" />

        <LinearLayout
            android:layout_width="90px"
            android:layout_height="fill_parent"
            android:layout_marginLeft="50px"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ac_uparrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10px"
                android:background="@drawable/uparrow"
                android:gravity="center" />

            <TextView
                android:id="@+id/ac_text"
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:background="@drawable/numberbg"
                android:gravity="center"
                android:text="22"
                android:textColor="#ffffff"
                android:textSize="10px" />

            <ImageButton
                android:id="@+id/ac_downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:background="@drawable/downarrow"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_list_temprature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55px"
            android:text="空调"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <!-- 横杆 温度调节 -->

        <LinearLayout
            android:layout_width="160px"
            android:layout_height="fill_parent"
            android:layout_marginLeft="110px"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ac_model"
                android:layout_width="fill_parent"
                android:layout_height="50px"
                android:background="@drawable/ac_model" >
            </ImageButton>

            <SeekBar
                android:id="@+id/item_list_temprature_seekbar"
                android:layout_width="140px"
                android:layout_height="5px"
                android:layout_marginTop="48px"
                android:max="100"
                android:maxHeight="1dip"
                android:progress="50"
                android:progressDrawable="@drawable/score"
                android:thumb="@drawable/fun_seekbar_thumb" />
            <!-- 横杆 温度调节 完 -->


            <!-- 功率 -->
        </LinearLayout>

        <TextView
            android:id="@+id/item_list_power_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:text="功率"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <!-- 功率 完 -->

        <LinearLayout
            android:layout_width="100px"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/power_uparrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10px"
                android:background="@drawable/uparrow"
                android:gravity="center" />

            <TextView
                android:id="@+id/power_text"
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:background="@drawable/numberbg"
                android:gravity="center"
                android:text="1000"
                android:textColor="#ffffff"
                android:textSize="10px" />

            <ImageButton
                android:id="@+id/power_downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:background="@drawable/downarrow"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>