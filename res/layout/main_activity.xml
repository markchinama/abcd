<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="@drawable/button_background"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/homebutton"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button_home" />

        <ImageButton
            android:id="@+id/infobutton"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button_bus_info" />

        <ImageButton
            android:id="@+id/controlbutton"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button_bus_control" />

        <ImageButton
            android:id="@+id/cameralbutton"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button_bus_cameral" />

        <ImageButton
            android:id="@+id/expertbutton"
            android:layout_width="224dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button_bus_expert" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:background="@drawable/temp_bus"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/score_processbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:max="100"
            android:progress="78" >
        </ProgressBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="112dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/status_power_panel_battery"
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/temp_battery" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78%" />

            <ProgressBar
                android:id="@+id/power_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:max="100"
                android:progress="78" >
            </ProgressBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:text="soc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/status_energy_panel_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="234KWH" />

            <ProgressBar
                android:id="@+id/energy_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="100"
                android:progress="78" >
            </ProgressBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/status_energy_panel_number"
                android:layout_marginLeft="40dp"
                android:text="剩余能量" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/status_distance_panel_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="234KM" />

            <ProgressBar
                android:id="@+id/mile_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="100"
                android:progress="78" >
            </ProgressBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="剩余里程" />
        </LinearLayout>

        <com.mark.bus.app.MyView
            android:id="@+id/myView"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/temp_kim_yongii" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>