<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="@drawable/button_background"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/homebutton"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_home" />

        <ImageButton
            android:id="@+id/infobutton"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_bus_info" />

        <ImageButton
            android:id="@+id/controlbutton"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_bus_control" />

        <ImageButton
            android:id="@+id/cameralbutton"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_bus_cameral" />

        <ImageButton
            android:id="@+id/expertbutton"
            android:layout_width="184dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_bus_expert" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="650dp"
        android:background="@drawable/bus"
        android:orientation="horizontal" >

        <ImageButton
            android:id ="@+id/model_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/eco" >
        </ImageButton>

        <ProgressBar
            android:id="@+id/score_processbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:max="100"
            android:progress="78"
            android:progressDrawable="@drawable/score" >
        </ProgressBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="112dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/status_power_panel_battery"
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/temp_battery" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78%" />

            <ProgressBar
                android:id="@+id/power_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:max="100"
                android:progress="78" >
            </ProgressBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:text="soc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/status_energy_panel_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="234KWH" />

            <ProgressBar
                android:id="@+id/energy_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="100"
                android:progress="78" >
            </ProgressBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/status_energy_panel_number"
                android:layout_marginLeft="40dp"
                android:text="剩余能量" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/status_distance_panel_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="234KM" />

            <ProgressBar
                android:id="@+id/mile_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="100"
                android:progress="78" >
            </ProgressBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="剩余里程" />
        </LinearLayout>

        <com.mark.bus.app.MyView
            android:id="@+id/myView"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/temp_kim_yongii" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/item_list_home"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/temp_home" />

        <ImageButton
            android:id="@+id/item_list_shutdown"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/item_list_home"
            android:src="@drawable/temp_shutdown" />

        <LinearLayout
            android:layout_width="187dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ac_uparrow"
                android:layout_width="187dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/uparrow" />

            <TextView
                android:id="@+id/ac_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:text="23"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <ImageButton
                android:id="@+id/ac_downarrow"
                android:layout_width="187dp"
                android:layout_height="40dp"
                android:src="@drawable/downarrow" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_list_temprature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:text="空调"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <!-- 横杆 温度调节 -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_list_temprature_seekbar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:text="22 C" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/item_list_temprature_mode_spinner"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <SeekBar
                android:id="@+id/item_list_temprature_seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" />
            <!-- 横杆 温度调节 完 -->

        </LinearLayout>
        <!-- 功率 -->

        <TextView
            android:id="@+id/item_list_power_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_list_temprature_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="功率"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <!-- 功率 完 -->

        <LinearLayout
            android:layout_width="187dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/power_uparrow"
                android:layout_width="187dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/uparrow" />

            <TextView
                android:id="@+id/power_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="1000"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <ImageButton
                android:id="@+id/power_downarrow"
                android:layout_width="187dp"
                android:layout_height="40dp"
                android:src="@drawable/downarrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>